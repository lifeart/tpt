{
  "name": "tpt",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:grep": "playwright test --grep",
    "test:failed": "playwright test --last-failed",
    "test:watch": "playwright test --ui --watch",
    "test:trace": "playwright test --trace on",
    "test:report": "npx tsx scripts/test-report.ts",
    "test:show-report": "playwright show-report",
    "new:test": "npx tsx scripts/new-test.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "tsx": "^4.21.0",
    "typescript": "~5.7.2",
    "vite": "^6.3.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "tailwindcss": "^4.1.4"
  }
}
